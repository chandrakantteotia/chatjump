{
  "manifest_version": 3,
  "name": "ChatJump",
  "version": "1.0",
  "description": "Sidebar to show only your questions from ChatGPT UI",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
